<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="234.0" prefWidth="347.0" stylesheets="@../../../resources/common.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.assistant.settings.SettingsController">
   <children>
      <VBox prefHeight="190.0" prefWidth="346.0">
         <children>
            <TextField fx:id="nDaysWithoutFine" promptText="No of days an user kan keep book without fine">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="25.0" />
               </VBox.margin></TextField>
            <TextField fx:id="finePerDay" layoutX="10.0" layoutY="10.0" promptText="Fine per day">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></TextField>
            <TextField fx:id="username" layoutX="10.0" layoutY="35.0" promptText="Username">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></TextField>
            <PasswordField fx:id="password" promptText="Password">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></PasswordField>
         </children>
      </VBox>
      <HBox layoutX="1.0" layoutY="209.0" prefHeight="53.0" prefWidth="346.0">
          <children>
             <Button mnemonicParsing="false" onAction="#handleSaveButtonAction" prefHeight="39.0" prefWidth="207.0" text="Save" />
             <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleCancelButtonAction" prefHeight="39.0" prefWidth="207.0" text="Cancel" />
          </children>
       </HBox>
   </children>
</AnchorPane>
